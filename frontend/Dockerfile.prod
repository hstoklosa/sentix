# Build stage
FROM node:22-alpine AS builder

WORKDIR /app

# ARG variables available at build time (declare before use)
ARG VITE_API_URL

# Set as ENV so they're available during build
ENV VITE_API_URL=$VITE_API_URL

COPY package*.json ./

RUN npm ci

COPY . .

EXPOSE 5173

# CMD ["npm", "run", "build"]
RUN npm run build

# Production stage
FROM nginx:alpine

# Copy built files (Vite builds to 'dist' by default)
COPY --from=builder /app/dist /usr/share/nginx/html

COPY ./nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]